<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AssessmentsActivity">

    <TextView
        android:id="@+id/assessmentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assessments"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="163dp"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="183dp" />
    <TextView
        android:layout_below="@+id/assessmentsTitle"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:text="Please select an assessment to edit below or add an assessment by clicking the button on the top right of the screen."/>


</RelativeLayout>